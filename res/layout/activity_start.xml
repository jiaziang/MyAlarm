<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E0FFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/account_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="130dp" >

        <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="注册手机号"
            android:inputType="number"
            android:paddingLeft="32dp"
            android:textSize="14dp" >
        </EditText>

        <ImageView
            android:id="@+id/little_phone"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="45dp"
            android:scaleType="fitCenter"
            android:src="@drawable/little_phone" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/password_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_layout"
        android:layout_marginBottom="58dp" >

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingLeft="32dp"
            android:textSize="14dp" >
        </EditText>

        <ImageView
            android:id="@+id/little_suo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="45dp"
            android:scaleType="fitCenter"
            android:src="@drawable/little_suo" />
    </FrameLayout>

    <Button
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@id/password_layout"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bluebutton_selector"
        android:text="登  陆" 
        android:textSize="18dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/regist_text"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@id/connect"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="26dp"
        android:gravity="center"
        android:text="还没有账号?"
        android:textSize="12dp" />

    <Button
        android:id="@+id/regist"
        android:layout_width="57dp"
        android:layout_height="22dp"
        android:layout_below="@id/connect"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/regist_text"
        android:background="@drawable/smallblue_selector"
        android:padding="1dp"
        android:text="立即注册"
        android:textSize="12dp" />

</RelativeLayout>