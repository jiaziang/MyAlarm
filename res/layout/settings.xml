<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/setting_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_head" >
    </ImageView>

    <RelativeLayout
        android:id="@+id/firstpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_button" >

        <TextView
            android:id="@+id/homepage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="闹钟"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/homepage_image"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/homepage_text"
            android:src="@drawable/homepage_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_button" >

        <TextView
            android:id="@+id/notification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="通知"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/notification_image"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/notification_text"
            android:src="@drawable/notification_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_button" >

        <TextView
            android:id="@+id/review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="日志"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/review_image"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/review_text"
            android:src="@drawable/review_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_button" >

        <TextView
            android:id="@+id/setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/setting_image"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/setting_text"
            android:src="@drawable/setting_icon" />
    </RelativeLayout>



</LinearLayout>